<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/container"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/image_user_pfp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:src="@drawable/atlas_logo_green"
            android:layout_gravity="center"
            android:layout_marginVertical="15dp"/>
        <Button
            android:id="@+id/button_upload_pfp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/container"
            android:backgroundTint="#cacaca"
            android:text="upload image"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/text_display_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{username}"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/text_display_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{email}"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Reputation:"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/text_display_reputation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{reputation}"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="18sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:boxStrokeColor="?attr/colorPrimary"
            android:textColorHint="#808080"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:counterTextAppearance="@style/TextLimitStyle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            >

            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/container"
                android:backgroundTint="#cacaca"
                android:text="@string/button_back"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/container"
                android:backgroundTint="?attr/colorPrimary"
                android:text="@string/button_save"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/text_description_save_confirmation"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="18sp"-->
<!--            android:text="@string/text_description_save_confirmation"-->
<!--            android:gravity="center"-->
<!--            android:visibility="gone"/>-->

    </LinearLayout>
</LinearLayout>
